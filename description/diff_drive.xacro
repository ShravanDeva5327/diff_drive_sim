<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">
    <!-- Include Colours & Inertia Macros -->
    <xacro:include filename="include.xacro"/>

    <!-- Links -->
    <link name="base_link"></link>

    <link name='chassis'>
        <visual>
            <geometry>
                <box size="2.0 1.0 0.5"/>
            </geometry>
            <origin xyz="0.5 0 0" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
        <collision name='collision'>
            <geometry>
                <box size="2.0 1.0 0.5"/>
            </geometry>
            <origin xyz="0.5 0 0.4" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_box mass="5.0" x="2.0" y="1.0" z="0.5">
            <origin xyz="0.5 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <link name='left_wheel'>
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.4"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision name='collision'>
            <geometry>
                <cylinder length="0.2" radius="0.4"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_cylinder mass="2.0" length="0.2" radius="0.4">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name='right_wheel'>
        <visual>
            <geometry>
                <cylinder length="0.2" radius="0.4"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision name='collision'>
            <geometry>
                <cylinder length="0.2" radius="0.4"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_cylinder mass="2.0" length="0.2" radius="0.4">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name='caster_wheel'>
        <visual>
            <geometry>
                <sphere radius="0.15"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision name='collision'>
            <geometry>
                <sphere radius="0.15"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <xacro:inertial_sphere mass="0.5" radius="0.15">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Joints -->
    <joint name="chassis_joint" type="fixed">
        <origin xyz ="0 0 0.4" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz ="0 0.6 0" rpy="-1.57 0 0"/>
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz ="0 -0.6 0" rpy="1.57 0 0"/>
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="caster_joint" type="fixed">
        <origin xyz ="1.2 0 -0.25 " rpy="0 0 0"/>
        <parent link="chassis"/>
        <child link="caster_wheel"/>
    </joint>

    <!--
    Friction Coefficients of links
        - High friction for wheels to prevent slipping
        - Low friction for caster wheel to allow slipping
          (since caster joint is fixed and not pivoted)
    -->
    <gazebo reference="left_wheel">
        <mu1>0.9</mu1>
        <mu2>0.9</mu2>
    </gazebo>

    <gazebo reference="right_wheel">
        <mu1>0.9</mu1>
        <mu2>0.9</mu2>
    </gazebo>

    <gazebo reference="caster_wheel">
        <mu1>0.05</mu1>
        <mu2>0.05</mu2>
    </gazebo>

    <!-- Plugins to control wheel joints using topics -->
    <gazebo>
        <plugin
            filename="libignition-gazebo-joint-controller-system.so"
            name="ignition::gazebo::systems::JointController">
            <joint_name>left_wheel_joint</joint_name>
            <topic>left_wheel/cmd_vel</topic>
        </plugin>
    </gazebo>

    <gazebo>
        <plugin
            filename="libignition-gazebo-joint-controller-system.so"
            name="ignition::gazebo::systems::JointController">
            <joint_name>right_wheel_joint</joint_name>
            <topic>right_wheel/cmd_vel</topic>
        </plugin>
    </gazebo>
</robot>